{
	"compilerOptions": {
		"strict": true,
		"lib": [
			"ESNext"
		],
		"target": "ESNext",
		"moduleResolution": "Node",
		"rootDir": "./src",
		"outDir": "./dist",
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"src/*"
			]
		},
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"src/**/*",
	],
}